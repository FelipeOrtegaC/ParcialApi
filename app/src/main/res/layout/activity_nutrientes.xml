<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgroundmain"
    tools:context=".View.NutrientesActivity">

    <data>
        <variable
            name="viewModel"
            type="com.frutas.viewModel.RetrofitService" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fruitname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Nombre de fruta"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/nutritionsname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:text="Nutrientes"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fruitcalories"
                android:layout_width="134dp"
                android:layout_height="42dp"
                android:layout_marginTop="15dp"
                android:text="Calorias:"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/fruitvaluecal"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="15dp"
                android:text="000"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fruitfat"
                android:layout_width="134dp"
                android:layout_height="42dp"
                android:text="Grasas: "
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/fruitvaluefat"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="000"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fruitsugar"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:text="Azucar: "
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/fruitvaluesug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="000"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fruitcarb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carbohidratos: "
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/fruitvaluecarb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="000"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fruitprot"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:text="Proteinas: "
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/fruitvalueprot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="000"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@color/white"/>

        </LinearLayout>

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="280dp"
            android:layout_height="78dp"
            android:layout_marginTop="340dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:text="Regresar"
            android:textSize="45dp" />


    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>